{% extends 'base.html.twig' %}

{% block title %}Post -
	{{post.title}}!
{% endblock %}

{% block body %}
	<h3>{{post.title}}</h3>
	<div>{{post.text}}</div>
	<div style='color:grey;'>
		{% if date(post.createdAt) < date('-1year') %}
			More than year ago.
		{% else %}
			{{post.createdAt|date('d/m/Y')}}
		{% endif %}
	</div>
{% endblock %}
