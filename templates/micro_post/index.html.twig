{% extends 'base.html.twig' %}

{% block title %}All posts!
{% endblock %}

{% block body %}

	<div>
		{% if posts %}
			{% for post in posts %}
				<div>
					<a href="{{path('app_micro_post_show', {post:post.id})}}">{{post.title}}</a>
				</div>
			{% endfor %}
		{% else %}
			<p>There's nothing here yet!</p>
		{% endif %}
	</div>

{% endblock %}
